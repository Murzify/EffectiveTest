<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FastButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>
    <style name="ActionButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:font">@font/sf_sembold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Chip" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:backgroundTint">@color/grey3</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>