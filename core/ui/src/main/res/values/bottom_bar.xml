<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@color/bottom_item</item>
        <item name="itemTextColor">@color/bottom_item</item>
        <item name="itemTextAppearanceActive">@style/NavigationBar.Active</item>
        <item name="itemTextAppearanceInactive">@style/NavigationBar.Inactive</item>
    </style>
    <style name="NavigationBar.Inactive">
        <item name="itemTextAppearanceActive">@color/blue</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="NavigationBar.Active">
        <item name="android:textSize">10sp</item>
    </style>
</resources>